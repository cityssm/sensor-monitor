<!DOCTYPE html>
<html lang="en">

<head>
  <title>
    <%= configFunctions.getProperty("application.applicationName") %>
  </title>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <link rel="icon" href="/images/favicon.png" />
  <link rel="stylesheet" href="/lib/bulma-a11y/bulma-a11y.min.css" />
  <link rel="stylesheet" href="/lib/fa5/css/all.min.css" />
</head>

<body>
  <main class="container">
    <h1 class="title is-1 has-text-centered"><%= configFunctions.getProperty("application.applicationName") %></h1>

    <% for (const config of configFunctions.getProperty("configs")) { %>
      <section class="section" data-config-key="<%= config.configKey %>">
        <h2 class="title is-3"><%= config.configTitle || config.configKey %></h2>
        <% for (const sensor of config.sensors) { %>
          <div class="card" data-sensor-key="<%= sensor.sensorKey %>">
            <header class="card-header">
              <h3 class="card-header-title">
                <%= sensor.sensorTitle || sensor.sensorKey %>
              </h3>
            </header>
          </div>
        <% } %>
      </section>
    <% } %>
  </main>
  <script>
    window.exports = window.exports || {};
  </script>
  <script src="/lib/bulma-js/bulma-js.js"></script>
  <script>
    bulmaJS.init();
  </script>
  <script src="/lib/bulma-webapp-js/cityssm.min.js"></script>
  <script src="/javascripts/dashboard.min.js"></script>
</body>

</html>
